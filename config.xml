<?xml version='1.0' encoding='utf-8'?>
<widget id="demo.purocean" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>DEMO</name>
    <description>
        DEMO
    </description>
    <author email="purocean@outlook.com" href="https://github.com/purocean/">
        洋子
    </author>
    <icon src="res/icon/android/icon-96-xhdpi.png" />
    <content src="app.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <splash src="res/screen/splash.png" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="StatusBarBackgroundColor" value="#ff8c00" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="orientation" value="portrait" />
    <preference name="WebViewBounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <chcp>
        <native-interface version="1" />
        <config-file url="http://xxx.xxx/chcp.json" />
    </chcp>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-statusbar" spec="^2.3.0" />
    <plugin name="cordova-hot-code-push-plugin" spec="^1.5.3" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.1" />
    <engine name="android" spec="^6.3.0" />
</widget>
